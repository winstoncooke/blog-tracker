    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.1",
    "mongoose-unique-validator": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "jest": "^28.1.2",
